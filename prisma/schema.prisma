generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String     @id @default(uuid()) @db.Uuid
  email        String     @unique
  username     String?    @unique
  displayName  String?
  passwordHash String
  avatar       String?
  isVerified   Boolean    @default(false)
  roles        UserRole[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  lastLoginAt  DateTime?
}

enum UserRole {
  organizer
  vendor
  attendee
  dual
}
